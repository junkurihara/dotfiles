" syntax highlight
syntax on

" line number
set number

" tab to space of size 2
set expandtab
set tabstop=2
set shiftwidth=2

" indent
set autoindent

" search settings
set hlsearch
set ignorecase
set smartcase
set incsearch

" status
set laststatus=2

" backspace
set backspace=indent,eol,start

" hightlight
set ruler
set showmatch
set cursorline
set background=dark
set showcmd

" encoding
set encoding=utf-8
